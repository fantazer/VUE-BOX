// === Inputs ===
.input,.textarea,.select
	padding 14px 20px
	resize: none
	border 1px solid transparent
	outline: 0 !important
	border-radius 5px
	font-family $v-font
	display block
	placeholder(#888888)
	background: #f6f6f6
	font-size: 14px
	tr(all)
	line-height: 1.6
	&:focus
		border 1px solid $border-color
		background: white

.input--white
	background: white

.input--disable
	@extend .disabled

// checkbox + radio style
.style-label
	display flex
	position relative
	align-items flex-start

.style-label--disable
	@extend .disabled

.check-el
	input
		position absolute
		top 0
		left -9999px

.style-input-text
	color black
	width: calc(100% - 80px)
	line-height: 1.6
	a
		color $mark

// checkbox
.style-label--checkbox
	.style-input-element
		br(5px)
		cp()
		tr(all)
		size 26px
		position relative
		display inline-block
		margin-right 10px
		background white
		border 1px solid $border-color
		&:hover
			border 1px solid $mark
	.icon
		display none
	.style-input
		&:checked ~ .style-input-element
			flex(mid)
			color white
			background: $mark
			border 1px solid $mark
			.icon
				display block
				fill white
				size 14px
// checkbox === end

// radio
.style-label--radio
	.style-input-element
		size 26px
		position relative
		display inline-block
		margin-right 10px
		background white
		border 2px solid $border-color
		round()
		cp()
		&:hover
			border 2px solid $mark
	.style-input
		&:checked ~ .style-input-element
			flex(mid)
			color white
			border 2px solid $mark
			background: white
			.icon-radio
				round()
				size 14px
				background $mark
// radio === end

// checkbox + radio style === end


//form
.input-row
	margin-bottom: 20px
	.input
		width: 100%
.input-row__title
	margin-bottom: 10px
	@extend .type--sm
.input-row--error
	.input
		border-color red
		color red
		background: white
	.error-msg
		display block
	.error
		color red
	.style-input-element
		border 1px solid red

.input-row--middle
	f()
	align-items center

.error-msg
	color red
	margin: 10px 0
	display none
	font-size: 14px
.input-cont
	+below(640px)
		grid-row-gap 0
	display: grid
	grid-gap 20px

.input-cont--two
	+below(640px)
		grid-template-columns: 1fr
	grid-template-columns: 1fr 1fr

.input-cont--three
	+below(640px)
		grid-template-columns: 1fr
	grid-template-columns: 1fr 1fr 1fr

.input-cont--four
	+below(640px)
		grid-template-columns: 1fr 1fr
	grid-template-columns: repeat(4,1fr)

//checkbox remember
.login-remember
	.style-label
		+below(768px)
			align-items: flex-start
	.style-input-text
		font-size: 12px
		color black
		width: calc(100% - 80px)
		line-height: 1.6
		margin-top: 3px
		a
			color $mark
	margin-bottom: 20px

.input-get
	f()
	align-items stretch
	.input
		border-radius 20px 0 0 20px
.input-get__btn
	position relative
	background: $mark
	border-radius 0 20px 20px 0
	border 0
	flex(mid)
	cp()
	tr()
	color white
	&:hover
		background: lighten($mark,10)
	.icon
		position absolute
		size 14px
		fill white
		top 50%
		left 50%
		margin-left: -7px
		margin-top: -7px

.input-get__btn-el
	height: 100%
	background: $mark
	border-radius 0 5px 5px 0
	border 0
	width: 60px
	&:hover
		background: darken($mark,5)

//upload
.upload-wrap
	flex(mid)
	fw()
	margin-bottom: 20px
.upload
	f()
	cp()
	br(10px)
	align-items: flex-start
	justify-content: center
	border 1px solid $border-color
	box-shadow 0px 3px 14px white
	tr(all)
	margin-bottom: 10px
	&:hover
		bsh()
.upload__icon
	padding: 10px
	border-right 1px solid $border-color
	height: 50px
	flex(mid)
	.icon
		size 25px
		fill red
.upload__text
	height: 50px
	margin-left: -1px
	padding: 15px
	width: auto
	flex(mid)
.upload-img
	flex(mid)
.upload-img__el
	size 50px
	br(10px)
	border 1px solid $border-color
	margin-right: 10px
	margin-bottom: 10px
	background-size: cover
	background-repeat: no-repeat
	position: relative
	overflow: hidden
	cp()
	&:hover
		&:before
			content 'X'
			opacity:1

	&:before
		content 'X'
		position: absolute
		background: #000000b3
		width: 100%
		height: 100%
		left 0
		top 0
		flex(mid)
		color white
		opacity:0
		tr(all)
.upload-btn
	position: absolute
	left -9999px
// form === end

// incr
.incr
	f()
	position relative
.incr__nav
	+below(480px)
		size 30px
	flex(mid)
	tr(all)
	size 36px
	border 1px solid #dddddd
	background white
	round()
	.icon
		+below(480px)
			size 12px
		size 12px
		fill $gray
		tr()
	&:hover
		cp()
		border 1px solid $mark
		.icon
			fill $mark
	&:active
		background-color darken($mark,10)
.incr__val
	flex(mid)
	//background white
	position relative
	tr(all)
	width: 30px
	span
		outline: none
		user-select: none

.incr--mark
	.incr__nav
		background: $mark
		border 0
		&:hover
			background: darken($mark,10)
		&:active
			background:lighten($mark,10)
		.icon
			fill white

.incr--mark-light
	.incr__nav
		border 1px solid $mark
		&:hover
			background: $mark
			.icon
				fill white
		&:active
			background:lighten($mark,10)
		.icon
			fill $mark

.incr--single.incr--mark-empty
	.incr__nav
		border 1px solid $mark
		&:hover
			background: $mark
			.icon
				fill white
		&:active
			background:lighten($mark,10)
		.icon
			fill $mark
	.incr__val
		opacity: 0


.incr--red
	.incr__nav
		background: red
		border 0
		&:hover
			background: darken(red,10)
		&:active
			background:darken(red,20)
		.icon
			fill white

.incr--red-light
	.incr__nav
		border 1px solid red
		&:hover
			background: red
			.icon
				fill white
		&:active
			background:darken(red,10)
		.icon
			fill red

.incr--sm
	.incr__nav
		size 24px
		.icon
			size 10px
	.incr__val
		padding: 0 10px
.incr--mdx
	.incr__nav
		size 32px
		.icon
			size 12px
	.incr__val
		padding: 0 10px

// Переключение с кнопки на инкремент
.incr-btn
	.incr-btn-wrap
		display: none
.incr-btn--fix
	width: 160px
	font-weight: 700
	.btn--md
		width: 100%
		padding: 12px
		height: 55px
		font-size: 20px
		flex(mid)
	.incr
		width: 100%
		flex(between)
	.incr__nav
		width: 40px
		height: 55px
	.incr__minus
		border-radius 30px 0 0 30px
	.incr__plus
		border-radius 0 30px 30px 0
.incr-btn--active
	.incr-btn__el
		display: none
	.incr-btn-wrap
		display: block


// incr === end



.incr--single-active
	.incr__val
		opacity 1
	.incr__minus
		opacity 1

.incr--single
	.incr__minus
		opacity 0
	.incr__nav
		border 0

.incr--single-active
	.incr__val
		opacity 1!important

	.incr__minus
		opacity 1

// incr === end